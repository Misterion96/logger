{
  "extends": "@dolgikh-maks/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "baseUrl": ".",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "types": [
      "node",
    ]
  }
}
